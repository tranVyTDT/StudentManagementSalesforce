<apex:page showHeader="true" sidebar="true" controller="Controller"  docType="html-5.0" >
<style type="text/css">
	.dateFormat{
		display: none;
	}
	.button{
		width:200px;
		margin:1%;
		padding:0px;
		border:1px solid #000000;
		background:#78909c !important
	}
</style>
		<!-- get input form user-->
		<apex:form >
			<table>
				<tr>
						<td >Name : </td>
						<td >
							<apex:inputField value="{!objKeySearch.studentName.Name}" style="width: 200px;height: 17px;"/>
						</td>
						<td>
							<apex:inputCheckbox value="{!objkeySearch.increasing}"  />
						</td>
						<td>
							<span>increasing</span>
						</td>
				</tr>
				<tr>
						<td>Class : </td>
						<td>
							<apex:selectList multiselect="false" size="1" value="{!objkeySearch.className}" style="width: 204px;height: 22px;">
								 <apex:selectOptions value="{!items}" > </apex:selectOptions>
							</apex:selectList>
						</td>
				</tr>
				<tr>
						<td> BirthDay : </td>
						<td>
							<apex:inputField value="{!objKeySearch.objStudentFrom.Birthday__c}" />
						</td>
						<td> ~ </td>
						<td>
							<apex:inputField value="{!objKeySearch.objStudentTo.Birthday__c}" />
						</td>
				</tr>
				<tr>
					<td colspan="4">
					</td>
				</tr>
			</table>
	<!-- showing the table-->
			<apex:pageMessages id="message"/>
			<apex:commandButton value="Search" action="{!actionSearch}"  styleClass="button"/>
			<apex:commandButton value="Add" action="{!doSubmit}" oncomplete="gotoAddNewStudentPage();" styleClass="button" />
			<apex:commandButton value="Delete" action="{!actionDeleteStudentBeSelected}" styleClass="button" 
						onclick="if (!confirm('Are you sure? This will delete member info')){ return false; }"/>
			<apex:outputPanel id="pinserted">
				<apex:pageBlock >
			      	<apex:pageBlockTable value="{!OutputList}" var="s">
			      		<apex:column >
			      			<apex:facet name="header">
								<apex:inputCheckbox />
							</apex:facet>
			      			<apex:inputCheckbox value="{!s.isSelected}"/>
			      		</apex:column>
				   		<apex:column headerValue="First Name" >
				   			<apex:outputField value="{!s.student.Namef__c}"/>
				   		</apex:column>
				   		<apex:column headerValue="Last Name" >
				   			<apex:outputField value="{!s.student.Namel__c}"/>
				   		</apex:column>
				   		<apex:column headerValue="Birthday" >
				   			<apex:outputField value="{!s.student.Birthday__c}"/>
				   		</apex:column>
				   		<apex:column headerValue="Gerder">
				   			<apex:inputCheckbox value="{!s.student.Gender__c}"/>
				   		</apex:column>
				   		<apex:column headerValue="Score1" >
				   			<apex:outputField value="{!s.student.Score1__c}"/>
				   		</apex:column>
				   		<apex:column headerValue="Score2" >
				   			<apex:outputField value="{!s.student.Score2__c}"/>
				   		</apex:column>
				   		<apex:column headerValue="Score3" >
				   			<apex:outputField value="{!s.student.Score3__c}"/>
				   		</apex:column>
				   		<apex:column headerValue="Average Score" >
				   			<apex:outputField value="{!s.student.AverageScore__c}"/>
				   		</apex:column>
				   		<apex:column headerValue="State" >
				   			<apex:outputField value="{!s.student.State__c}"/>
				   		</apex:column>
				   		<apex:column headerValue="{!sumstudents}">
				   				<apex:commandButton 
				   				value="Update" 
				   				action="{!actionDeleteStudent}"  
				   				reRender="pinserted"
				   				style="background: #ffffff;border: 0px ;text-decoration: underline"
				   				>
				   				</apex:commandButton>
				   				<span>|</span>
				   				<apex:commandButton 
				   				value="Delete" 
				   				action="{!actionDeleteStudent}"  
				   				reRender="pinserted"
				   				style="background: #ffffff;border: 0px ;text-decoration: underline"
				   				onclick="if (!confirm('Are you sure? This will delete member info')){ return false; }"
				   				>
				   					<apex:param value="{!s.student.StudentId__c}" assignTo="{!idStudent}"  name="idStudent"/>
				   				 </apex:commandButton>
				   		</apex:column>
			      	</apex:pageBlockTable>
		   		</apex:pageBlock>
	   		</apex:outputPanel>
   		</apex:form>
<script>
function gotoAddNewStudentPage() {
    window.location = '/apex/AddNewStudent';
}
</script>
</apex:page>